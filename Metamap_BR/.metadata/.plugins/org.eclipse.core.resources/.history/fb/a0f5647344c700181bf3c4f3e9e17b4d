import java.util.ArrayList;
import java.util.List;

import gov.nih.nlm.nls.metamap.MetaMapApi;
import gov.nih.nlm.nls.metamap.MetaMapApiImpl;
import gov.nih.nlm.nls.metamap.PCM;
import gov.nih.nlm.nls.metamap.Result;
import gov.nih.nlm.nls.metamap.Utterance;

public class principal {

	public static void main(String[] args) throws Exception{
		//Um texto grande como entrada e mostrar no terminal as entidade nomeadas da area de saúde
		//Mostrar exemplos medicos do twitter search
		//Ir aos poucos.
		//Olha o javadoc com cuidado
		
		MetaMapApi api = new MetaMapApiImpl();
		

	    api.setOptions("-c");
	    List<Result> resultList = api.processCitationsFromString("inferior vena caval filter");
	    
	    System.out.println(api.getOptions());   
	    //System.out.println(resultList);
	    for(Result r : resultList){
	    	System.out.println(r);
	    	//System.out.println("Lista de Abreviações : "+r.getAcronymsAbbrevs());
	    	//System.out.println("Lista de Negações : "+r.getNegationList());
	    	for(Utterance ut : r.getUtteranceList()){
	    		System.out.println(ut.getPCMList());
	    	
	    		//System.out.println(ut.getString());
	    		//System.out.println(ut.getId());
	    		for(PCM pcm: ut.getPCMList()){
	    			System.out.println(pcm.getPhrase());
	    			System.out.println(pcm.getCandidateList());
	    			System.out.println(pcm.getCandidateList().get(0).getMatchedWords());
	    			System.out.println(pcm.getCandidateList().get(0).getMatchMapList().get(1).getListRepr());
	    			
	    		}
	    	}
	    }
	    
	    
	}

}
