	    List<Result> resultList = api.processCitationsFromString("laboratory culture");
	    for(Result r : resultList){
	    	List<Utterance> ut =  r.getUtteranceList();
	    }
	    System.out.println(resultList);
	    
	    
	    
	    System.out.println(api.getOptions());
